<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.demo13_1.Main2Activity">

    <TextView
        android:id="@+id/tv_registHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="注册信息"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/view_wire"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_registHint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_wire"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_userHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="用  户  名	："
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/text_register_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_userHint"
            android:layout_alignBottom="@+id/tv_userHint"
            android:layout_alignLeft="@+id/text_register_phone"
            android:background="@null"
            android:ems="10"
            android:hint="请输入用户名"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/tv_phoneHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_userHint"
            android:layout_below="@+id/text_register_username"
            android:layout_marginTop="20dp"
            android:text="手机号码	："
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/text_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_phoneHint"
            android:layout_toRightOf="@+id/tv_phoneHint"
            android:background="@null"
            android:ems="10"
            android:hint="请输入手机号码"
            android:inputType="phone"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/text_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_register_phone"
            android:layout_alignTop="@+id/tv_pswHint"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields" />

        <TextView
            android:id="@+id/tv_pswHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_phoneHint"
            android:layout_below="@+id/tv_phoneHint"
            android:layout_marginTop="22dp"
            android:text="密        码  ："
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <!--<Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/button_confirm"
            android:layout_below="@+id/text_register_password"
            android:text="取消"
            android:background="@null"/>

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_register_phone"
            android:layout_below="@+id/text_register_password"
            android:text="确定"
            android:background="@null"/>-->
    </RelativeLayout>

</RelativeLayout>
